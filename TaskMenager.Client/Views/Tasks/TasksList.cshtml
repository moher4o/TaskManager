@{
    ViewData["Title"] = "Задачи";
}

@{var permisionType = User.Claims.Where(u => u.Type == "permissionType").Select(u => u.Value).FirstOrDefault();}
<input type='hidden' id='uid' value=@permisionType>
<br />
<div class="row p-0 m-0">
    <div class="col-md-3">
        <h2 class="text-info">Списък задачи</h2>
    </div>
    <div class="col-md-3" style="padding-top:6px;">
        <input style="margin-left:15px;" type="checkbox" name="showDeleted" id="showDeleted">
        <label for="showDeleted"> Изтрити задачи</label>
    </div>

    <div class="col-md-3" style="padding-top:6px;">
        <input style="margin-left:15px;" type="checkbox" name="showClosed" id="showClosed">
        <label for="showClosed"> Приключени задачи</label>
    </div>

    <div class="col-md-2 offset-md-1">
        <a asp-action="CreateNewTask" asp-controller="Tasks" class="btn btn-info form-control text-white">
            Създай задача
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered compact" style="width:100%">
            <thead>
                <tr>
                    <th>N:</th>
                    <th>Име на задача</th>
                    <th><i class="fas fa-users"></i></th>
                    <th>Статус</th>
                    <th>Тип задача</th>
                    <th>Действия</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/taskList.js"></script>
}