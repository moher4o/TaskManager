@{
    ViewData["Title"] = "Отдели";
}
<br />
<div class="row p-0 m-0">
    <div class="col-md-4">
        <h2 class="text-info">Списък отдели</h2>
    </div>
    <div id="newdir-placeholder"></div>
    <div class="col-md-3" style="padding-top:6px;">
        <label>
            <input class="fancycheck" style="margin-left:15px;" type="checkbox" name="showDeleted" id="showDeleted">
            <span aria-label="showDeleted">Изтрити отдели</span>
        </label>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-2">
        <a class="btn btn-info form-control text-white" style="cursor:pointer;" onclick=NewDepModalShow()>
            Нов отдел
        </a>
    </div>

    <div class="col-12 border p-3">
        <div id="modal-placeholder"></div>
        <div id="newsec-placeholder"></div>
        <div id="datepick-placeholder"></div>
        <table id="DT_load" class="table table-striped table-bordered compact" style="width:100%">

            <thead>
                <tr>
                    <th>N:</th>
                    <th>Дирекция</th>
                    <th>Отдел</th>
                    <th>Действия</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/departmentsList.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
