@{
    ViewData["Title"] = "Длъжности";
}
@*<input type='hidden' id='uid' value=@permision>*@
<br />
<div class="row p-0 m-0" style="display: flex; justify-content: center;  align-items: center;">
    <div class="col-md-4">
        <h2 class="text-info">Списък на длъжностите</h2>
    </div>
    <div id="newdir-placeholder"></div>
    <div id="modal-placeholder"></div>
    <div class="col-md-2" style="padding-top:6px;">
        <label>
            <input class="fancycheck" style="margin-left:15px;" type="checkbox" name="showDeleted" id="showDeleted">
            <span aria-label="showDeleted">Изтрити длъжности</span>
        </label>
    </div>
        <div class="col-md-2">
            <a class="btn btn-info form-control text-white" style="cursor:pointer;" onclick=NewTitleModalShow() id="newjobtype">
                Нова длъжност
            </a>
        </div>
    <div class="col-8 border p-3">
        <table id="DT_load" class="table table-striped table-bordered compact" style="width:100%">
            <thead>
                <tr>
                    <th>Длъжност</th>
                    <th><i class="fas fa-users"></i></th>
                    <th>Действия</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/jobList.js"></script>
}