@{
    ViewData["Title"] = "2FA Вход";
}

<form method="post" asp-controller="Users" asp-action="SecondFALogin">
    <div class="PrimeBox2" style="margin-top:150px; max-width:20%; background-color:ghostwhite;">
        <div class="form-group row" style="background-color: #69a0f1; display: flex; justify-content: center;  align-items: center;" id="container">
            <h5 style="color:white; margin-left:2px;">2Ф Автентикация</h5>
         </div>
        <div class="row" style="
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top:10px;" >
            
                <div>
                    <input name="mobNumberCode" id="mobNumberCode" placeholder="Въведете кода" />
                </div>
            
        </div>
        <div class="row" style=" display: flex; justify-content: center; align-items: center; margin-top: 10px; margin-left: 2px;">
            <button type="button" class="button save" id="send">Вход</button>
        </div>
        <input type="submit" class="btn button-invisible" value="REALSENDSEND" id="realsend" />
    </div>
</form>

@section Scripts{
    <script src="~/js/2FAcheck.js" charset="utf-8"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
